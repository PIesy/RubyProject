<div class="modal fade" id="add-track" tabindex="-1" role="dialog" aria-labelledby="Add-track" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Add track</h4>
      </div>
      <div class="modal-body">
        <%= form_for(Track.new) do |f| %>
            <div class="field">
              <%= f.label :name %><br>
              <%= f.text_field :name %>
            </div>
            <div class="field">
              <%= f.label 'Souncloud url' %><br>
              <%= f.text_field :soundcloud_url, value: "http://" %>
            </div>
            <input type="hidden" name="event_id" value="<%=	@event.id %>">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        <%= f.submit class: 'btn btn-info' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
