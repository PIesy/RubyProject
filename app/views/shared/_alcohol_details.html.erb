<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="AlcoholDetails" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="AlcoholDetails">Details</h4>
      </div>
      <div class="modal-body">
        <h2 style="text-align: center"><%= alkohol.name %></h2>
        <table class="table">
            <tr>
              <td>Drink type</td>
              <td><%= alkohol.drink_type %></td>
            </tr>
            <tr>
              <td>Alcohol percentage</td>
              <td><%= alkohol.percentage %></td>
            </tr>
            <tr>
              <td>Volume</td>
              <td><%= alkohol.volume %></td>
            </tr>
            <tr>
              <td>Bottles count</td>
              <td><%= alkohol.count %></td>
            </tr>
        </table>
        <%= image_tag alkohol.image.thumb('300x300').url %>
        <h3 style="display: inline">Brought by <%= alkohol.user.name %></h3>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= link_to 'Edit', edit_alkohol_path(alkohol), class: 'btn btn-info' %>
        <%= link_to 'Remove', alkohol, method: :delete, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>