<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.datetime_select :date, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br>
    <%= f.datetime_select :end_date, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.bootsy_area :description, class: 'form-control', rows: 12, editor_options: {alert_unsaved: false} %>
  </div>
  <div class="field">
    <%= f.label 'Tags' %><br>
    <input id="tags-input" name="tags" type="text" value="<%= tags_to_s(@event.tags) %>" data-role="tagsinput">
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= javascript_include_tag 'search' %>